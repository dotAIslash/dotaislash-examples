{
  "version": "1.0",
  "metadata": {
    "name": "Python Project",
    "description": "Python application with PEP 8 standards",
    "tags": ["python", "backend", "api"],
    "author": "Alphin Tom",
    "created": "2025-10-17",
    "license": "MIT"
  },
  "rules": [
    "rules/python-style.md",
    "rules/testing.md"
  ],
  "context": [
    "src/**/*.py",
    "tests/**/*.py",
    "requirements.txt",
    "pyproject.toml"
  ],
  "settings": {
    "model": "claude-sonnet-4",
    "temperature": 0.7
  },
  "permissions": {
    "files": {
      "read": ["src/**", "tests/**", "*.py", "*.txt", "*.toml", "*.md"],
      "write": ["src/**", "tests/**"],
      "deny": [".env*", "*.key", "venv/**", "__pycache__/**", "*.pyc"]
    }
  }
}
